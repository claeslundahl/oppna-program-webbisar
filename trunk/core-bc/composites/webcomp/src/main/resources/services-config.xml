<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context-2.5.xsd">

  <context:property-placeholder location="classpath:application-dev.properties" />
  
  <bean id="Webbisar.WebbisarFlowSupport" class="se.vgr.webbisar.presentation.WebbisarFlowSupportBean" autowire="byType">
    <property name="mailSender"><ref bean="mailSender"/></property>
    <property name="velocityEngine"><ref bean="velocityEngine"/></property>
  </bean>

  <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host"><value>${webbisar.mailHost}</value></property>
  </bean>
   
  <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
    <property name="velocityProperties">
      <value>
         resource.loader=class
         class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
      </value>
    </property>
  </bean>
  
  <bean id="webbisService" class="se.vgr.webbisar.svc.impl.WebbisServiceImpl"/>
  
  <bean id="webbisCacheLoader" class="se.vgr.webbisar.svc.sitemap.impl.WebbisCacheLoaderImpl">
    <constructor-arg ref="webbisService"/>
  </bean>
  
  <bean id="webbisCacheService" class="se.vgr.webbisar.svc.sitemap.impl.WebbisCacheServiceImpl">
    <constructor-arg ref="webbisCacheLoader" />
  </bean>
  
  <!-- bean id="sitemapCacheLoader" class="se.vgr.webbisar.svc.sitemap.impl.ExternalSitemapCacheLoaderImpl" -->
  <bean id="sitemapCacheLoader" class="se.vgr.webbisar.svc.sitemap.impl.InternalSitemapCacheLoaderImpl">
    <constructor-arg ref="webbisCacheService"/>
    <constructor-arg value="${webbisar.baseUrl}" />
  </bean>
  
  <bean id="sitemapCacheService" class="se.vgr.webbisar.svc.sitemap.impl.SitemapCacheServiceImpl">
    <constructor-arg ref="sitemapCacheLoader" />
  </bean>
  
  <!-- bean id="sitemapGenerator" class="se.vgr.webbisar.svc.sitemap.ExternalSitemapGenerator" / -->
  <bean id="sitemapGenerator" class="se.vgr.webbisar.svc.sitemap.InternalSitemapGenerator" />
  
  <bean id="sitemapSupportBean" class="se.vgr.webbisar.svc.sitemap.SitemapSupportBean">
    <constructor-arg ref="sitemapCacheService" />
    <constructor-arg ref="sitemapGenerator" />
  </bean>

</beans>